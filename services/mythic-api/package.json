{
  "name": "mythic-api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsup src/server.ts --format esm --platform node --target node20 --sourcemap --clean --out-dir dist",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "test:narrator-smoke": "tsx scripts/narrator-smoke-test.ts",
    "test:worldforge": "tsx --test src/lib/worldforge/worldforge.test.ts",
    "test:worldforge:contracts": "tsx --test src/lib/worldforge/worldforge.contracts.test.ts",
    "start:keychain": "bash ../../scripts/start-mythic-api-keychain.sh"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@supabase/supabase-js": "^2.90.1",
    "fastify": "^5.6.1",
    "jose": "^6.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "tsx": "^4.21.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-musl": "4.57.1"
  }
}
