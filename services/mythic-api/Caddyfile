# Site bind can be a domain (for TLS) or :80 (IP-only HTTP).
# Defaults to :80 so IP-based access still works before DNS is ready.
{$MYTHIC_API_SITE::80} {
  encode gzip zstd

  handle /healthz {
    reverse_proxy mythic-api:3001
  }

  handle /functions/v1/* {
    reverse_proxy mythic-api:3001
  }
}
